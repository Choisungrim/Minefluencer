<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="mapperInterface.YtubeMapper">
  <select id = "selectList" resultType="vo.YtubeVO">	
  	select * from ytube
  </select>
  
  	<insert id="insert">
  		insert into ytube(name,subscribe,introduce,image) values(#{name},#{subscribe},#{introduce},#{image})
  	</insert>
  	<select id="imgOne" resultType = "vo.MemberVO">
  		select substr(a.subscribe,1,4), a.seq, a.name,a.introduce ,a.image ,b.job 
		from ytube a join address b 
		on a.name = b.name
		where b.job like (select concat(substr("먹방,게임",1,2),"%")as interest 
		from member 
		where interest is not null)
		limit 2;
  	</select>
  </mapper>
  
